<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!-- context-param Configuration -->
	<!-- <context-param>
		<param-name>config.properties.file</param-name>
		<param-value>../conf/app.conf</param-value>
	</context-param>
	<context-param>
		<param-name>config.appproperties.file</param-name>
		<param-value>WEB-INF/web.properties</param-value>
	</context-param> -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-base.xml</param-value>
	</context-param>
	<context-param>
		<param-name>imagedir</param-name>
		<param-value>/Uploadimages</param-value>
	</context-param>
	<!-- listener Configuration -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>springServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring-view.xml</param-value>
		</init-param>
		<!-- <init-param>  
			<param-name>imagedir</param-name>  
			<param-value>/aaa</param-value>  
		</init-param> -->
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- servlet-mapping Configuration -->
	<servlet-mapping>
		<servlet-name>springServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- The Session Configuration -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!-- The Welcome Page List -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
  
	<!-- The Error Page List -->
	<error-page>
		<error-code>404</error-code>
		<location>/404</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/err</location>
	</error-page>
</web-app>
